# Base configuration
STACKWIZ_BASE_DIR=/srv/dockerdata
STACKWIZ_TEMPLATES_DIR=/srv/dockerdata/_templates

# Cloudflare API (for DNS management)
CF_API_EMAIL=your-email@example.com
CF_DNS_API_TOKEN=your-cloudflare-api-token

# Optional: HTTP transport configuration
STACKWIZ_HTTP_HOST=0.0.0.0
STACKWIZ_HTTP_PORT=8080

# Optional: Authentication (for remote access)
STACKWIZ_AUTH_ENABLED=false
STACKWIZ_AUTH_TOKEN=your-secret-token

# Optional: Logging configuration
STACKWIZ_LOG_LEVEL=INFO
STACKWIZ_LOG_FORMAT=json

# Optional: Performance tuning
STACKWIZ_MAX_WORKERS=4
STACKWIZ_CACHE_TTL=300

# Optional: Docker configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_TIMEOUT=30